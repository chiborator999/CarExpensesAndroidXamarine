<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/inputDanak"
        android:hint="DanakMPS za godina" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:id="@+id/inputGTP"
        android:hint="GTP" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160px"
        android:gravity="center"
        android:id="@+id/inputGrajdanska"
        android:hint="Grajdanska otgovornost" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240px"
        android:gravity="center"
        android:id="@+id/inputObslujvane"
        android:hint="Obslujvane" />
    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350px"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/txtResult" />
    <Button
        android:text="RESULT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600px"
        android:gravity="center"        
        android:id="@+id/btnResult" />
    
</RelativeLayout>